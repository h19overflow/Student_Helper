# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# PostgreSQL Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=legal_search

# Vector Store (S3 Vectors)
AWS_DEFAULT_REGION=ap-southeast-2
VECTOR_STORE_INDEX_NAME=legal-search-vectors
VECTOR_STORE_EMBEDDING_MODEL=text-embedding-004
VECTOR_STORE_EMBEDDING_DIMENSION=768

# Google API (Gemini)
GOOGLE_API_KEY=your-google-api-key-here

# Celery
CELERY_BROKER_HOST=localhost
CELERY_BROKER_PORT=5672
CELERY_BROKER_USER=guest
CELERY_BROKER_PASSWORD=guest
CELERY_RESULT_BACKEND_HOST=localhost
CELERY_RESULT_BACKEND_PORT=6379
CELERY_RESULT_BACKEND_DB=0

# Langfuse Observability
OBSERVABILITY_LANGFUSE_HOST=http://localhost:3000
OBSERVABILITY_LANGFUSE_PUBLIC_KEY=your-public-key
OBSERVABILITY_LANGFUSE_SECRET_KEY=your-secret-key
OBSERVABILITY_LANGFUSE_ENABLED=true

# Logging
OBSERVABILITY_LOG_FORMAT=json
OBSERVABILITY_LOG_CORRELATION_ENABLED=true
